
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="format-detection" content="telephone=no"/>
    <meta name="format-detection" content="email=no"/>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=0" name="viewport">
    <title></title>
    <style>
    *{margin:0;padding:0;box-sizing: border-box;}
    *, *:active, *:focus{outline: 0 none;}
    html body{height: 100%;width: 100%;}
    body{font-size:12px;}

    .app{position: absolute;width:100%;height: 100%;background: url('https://dn-caicloudui.qbox.me/ddy/2-1.jpg') top no-repeat;background-size: 140%;}
    .text-wp{position: absolute;top:20px;left:0;width:100%;height:auto;padding: 2px 20px;}
    .text{float:left;width:20px;height:20px;line-height: 20px;border-radius: 5px;margin:0 2px 2px 0;color:#333;text-align: center;font-size:20px;}
    @keyframes an-enter {
      0% {transform: scale(2);opacity: 0}
      100% {transform: scale(1);opacity: 1}
    }
    .enter{animation: an-enter 1.3s;}
    .ddy{transition: all 1s;background-color: #b556a9;color:#fff;}
    .code{position: absolute;bottom:2px;left:0;width: 100%;height: 210px;padding: 0 0 10px 10px}
    </style>

  </head>

  <body>
    <div class="app">
      <div class="text-wp" id="text"></div>
    </div>
    <div class="code"><img src="https://dn-caicloudui.qbox.me/ddy/5.png?1" height="200"/></div>
  </body>

<script src="/js/zepto.min.js"></script>
<script src="/js/socket.io.js"></script>
<script>
(function(){
  var doc = document, body = doc.body;

  var mod = {
    length: 0,

    init: function() {
      var w = this;
      var fullstr = "";

      var socket = io.connect(window.location.origin);
      w.socket = socket;

      w.initEvent();
    },

    initEvent: function(){
      var w = this;

      w.socket.on('displayInit', function(d) {
        w.length = d.str.length;
        for (var i = 0; i < w.length; i++) {
          var div = $('<div class="text"></div>');
          div.attr('id', i);
          $('#text').append(div);
        }
        if (d.str) {
          fullstr = d.str;
        }
      })

      w.socket.on('display', function(d) {
        $('#' + d.index).addClass('enter').text(d.text);
      });

      w.socket.on('end', function(d) {
        for (var i = 0; i < fullstr.length; i++ ) {
          $('#' + i).addClass('enter').text(fullstr[i]);
        }
      });

      w.socket.on('raffle', function(d) {
        for (var i= 0; i < d.length; i++) {
          $('#' + d[i]).addClass('ddy')
        }
      });
    }
  }

  mod.init();
})();

</script>

</html>
